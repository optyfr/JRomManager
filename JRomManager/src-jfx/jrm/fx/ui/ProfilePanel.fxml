<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jrm.fx.ui.ProfilePanelController">
   <center>
      <SplitPane dividerPositions="0.1" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <TreeView fx:id="profilesTree" prefHeight="200.0" prefWidth="200.0">
               <contextMenu>
                  <ContextMenu anchorX="0.0" anchorY="0.0" x="0.0" y="0.0">
                    <items>
                        <MenuItem mnemonicParsing="false" text="%MainFrame.mntmCreateFolder.text" />
                        <MenuItem mnemonicParsing="false" text="%MainFrame.mntmDeleteFolder.text" />
                    </items>
                  </ContextMenu>
               </contextMenu></TreeView>
            <TableView fx:id="profilesList" prefHeight="200.0" prefWidth="200.0">
               <columns>
                  <TableColumn fx:id="profileCol" editable="false" prefWidth="200.0" sortable="false" text="%FileTableModel.Profile" />
                  <TableColumn fx:id="profileVersionCol" editable="false" prefWidth="50.0" sortable="false" text="%FileTableModel.Version" />
                  <TableColumn fx:id="profileHaveSetsCol" editable="false" prefWidth="90.0" sortable="false" text="%FileTableModel.HaveSets" />
                  <TableColumn fx:id="profileHaveRomsCol" editable="false" prefWidth="90.0" sortable="false" text="%FileTableModel.HaveRoms" />
                  <TableColumn fx:id="profileHaveDisksCol" editable="false" prefWidth="70.0" sortable="false" text="%FileTableModel.HaveDisks" />
                  <TableColumn fx:id="profileCreatedCol" editable="false" prefWidth="125.0" sortable="false" text="%FileTableModel.Created" />
                  <TableColumn fx:id="profileLastScanCol" editable="false" prefWidth="125.0" sortable="false" text="%FileTableModel.Scanned" />
                  <TableColumn fx:id="profileLastFixCol" editable="false" prefWidth="125.0" sortable="false" text="%FileTableModel.Fixed" />
               </columns>
            </TableView>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="40.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnLoad" disable="true" maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" onAction="#actionLoad" text="%MainFrame.btnLoadProfile.text" />
            <Button fx:id="btnImportDat" mnemonicParsing="false" onAction="#actionImportDat" text="%MainFrame.btnImportDat.text">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button fx:id="btnImportSL" mnemonicParsing="false" onAction="#actionImportSL" text="%MainFrame.btnImportSL.text" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
